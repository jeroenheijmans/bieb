<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  
  <connectionStrings>
    <add name="master" connectionString="Server=(LocalDB)\v11.0; Integrated Security=true; Database=Master;" providerName="System.Data.SqlClient" />
    <add name="tests" connectionString="Server=(LocalDB)\v11.0; Integrated Security=true; Database=Tests" providerName="System.Data.SqlClient" />
  </connectionStrings>

  <log4net>
    <root>
      <appender-ref ref="TraceAppender" />
    </root>

    <logger name="NHibernate">
      <level value="ERROR" />
    </logger>

    <logger name="NHibernate.SQL">
      <level value="DEBUG" />
    </logger>

    <appender name="TraceAppender" type="log4net.Appender.TraceAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline%newline" />
      </layout>
    </appender>
  </log4net>
  
</configuration>