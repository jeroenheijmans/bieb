@model Bieb.Web.Models.EditBookModel

@{
    ViewBag.Title = "Edit";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h1>@Model.Title</h1>

@using (Html.BeginForm("Save", "Books")) 
{
    @Html.AntiForgeryToken()
    
    <div class="edit-form book">
        <section class="field-group">
            <div class="field-group-label">@BiebResources.BookStrings.Title</div>
            <div class="field">
                @Html.EditorFor(model => model.Title)
            </div>
        </section>

        <section class="field-group">
            <div class="field-group-label">@BiebResources.BookStrings.Subtitle</div>
            <div class="field">
                @Html.EditorFor(model => model.Subtitle)
            </div>
        </section>

        <section class="field-group">
            <div class="field-group-label">@BiebResources.BookStrings.Editors</div>
            <div class="field">
                @Html.ListBoxFor(model => model.EditorIds, Model.AvailablePeople)
            </div>
        </section>

        <section class="field-group">
            <div class="field-group-label">@BiebResources.BookStrings.Published</div>
            <div class="field">
                @Html.DropDownListFor(model => model.PublisherId, Model.AvailablePublishers)
                @Html.LabelFor(model => model.PublisherId)
            </div>
            <div class="field">
                @Html.EditorFor(model => model.Year)
                @Html.LabelFor(model => model.Year)
            </div>
        </section>

        <section class="field-group">
            <div class="field-group-label">@BiebResources.BookStrings.Isbn</div>
            <div class="field">
                @Html.EditorFor(model => model.Isbn)
                @Html.LabelFor(model => model.Isbn)
            </div>
            <div class="field">
                @Html.EditorFor(model => model.IsbnLanguage)
                @Html.LabelFor(model => model.IsbnLanguage)
            </div>
        </section>

        <section class="field-group">
            <div class="field-group-label">@BiebResources.BookStrings.LibraryStatus</div>
            <div class="field">
                @Html.DropDownListFor(model => model.LibraryStatus, new SelectList(Enum.GetValues(typeof(Bieb.Domain.Entities.LibraryStatus))))
            </div>
        </section>
        
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.ModifiedDateTicks)
        
        @Html.ValidationSummary()
        
        <div class="form-actions">
            <input type="submit" value="@BiebResources.SharedStrings.Save" />
        </div>
    </div>
}