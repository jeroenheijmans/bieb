@using Bieb.Web.Helpers;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Reset.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Library.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="wrapper">
        <header>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="title">
                <h1>
                    @Html.ActionLink("Bieb: My Library","Index", "Home")
                </h1>
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.MenuLink("Books", "Index", "Book")</li>
                    <li>@Html.MenuLink("Series", "Index", "Series")</li>
                    <li>@Html.MenuLink("Stories", "Index", "Story")</li>
                    <li>@Html.MenuLink("People", "Index", "Person")</li>
                    <li>@Html.MenuLink("Publishers", "Index", "Publisher")</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
            BIEB! Books that are (and have been) in my personal library!
        </footer>
    </div>

</body>
</html>
