<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Reset.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    
    <header>
        <div class="title">
            @Html.ActionLink("Bieb: My Library","Index", "Home")
        </div> <!-- end .title -->
        <nav>
            <ul id="menu">
                <li class="home">@Html.MenuLink("Home", "", "Home")</li>
                <li class="people">@Html.MenuLink("People", "Index", "Person")</li>
                <li class="books">@Html.MenuLink("Books", "Index", "Book")</li>
                <li class="series">@Html.MenuLink("Series", "Index", "Series")</li>
                <li class="search">@Html.MenuLink("Search", "Basic", "Search")</li>
                <li class="surprise">@Html.MenuLink("Surprise me!", "Index", "Surprise")</li>
            </ul> <!-- end #menu -->

            <div id="search">
                @Html.Partial("_SearchBoxPartial")
            </div> <!-- end #search -->
        </nav>
    </header>

    <div class="wrapper">
        <section id="main">
            @RenderBody()
        </section> <!-- end #main -->
    </div> <!-- end .wrapper -->

    <footer>
        <p>
            <span>BIEB!</span> Books that are (and have been) in my personal library
            <span id="powered-by">Powered by <a href="http://bieb.codeplex.com" target="_blank">bieb.codeplex.com</a></span>
        </p>       
    </footer>

</body>
</html>
