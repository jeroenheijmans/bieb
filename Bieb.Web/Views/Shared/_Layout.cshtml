<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Reset.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    
    <header>
        <div class="title">
            @Html.ActionLink(BiebResources.SharedStrings.SiteTitleLong, "Index", "Home")
        </div>
        <nav>
            <ul id="menu">
                <li class="home">@Html.MenuLink("Home", "", "Home")</li>
                <li class="people">@Html.MenuLink("People", "Index", "Person")</li>
                <li class="books">@Html.MenuLink("Books", "Index", "Book")</li>
                <li class="series">@Html.MenuLink("Series", "Index", "Series")</li>
                <li class="search">@Html.MenuLink("Search", "Basic", "Search")</li>
                <li class="surprise">@Html.MenuLink("Surprise me!", "Index", "Surprise")</li>
            </ul>

            <div id="search">
                @Html.Partial("_SearchBoxPartial")
            </div>
        </nav>
    </header>

    <div class="wrapper">
        <section id="main">
            @RenderBody()
        </section>
    </div>

    <footer>
        <p>
            <span>@BiebResources.SharedStrings.SiteTitleShort</span> @BiebResources.SharedStrings.SiteSlogan
            <span id="powered-by">@BiebResources.SharedStrings.PoweredBy <a href="http://bieb.codeplex.com" target="_blank">bieb.codeplex.com</a></span>
        </p>       
    </footer>

</body>
</html>
