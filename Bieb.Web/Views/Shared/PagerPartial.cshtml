@model PagedList.IPagedList<Bieb.Domain.Entities.BaseEntity>


<div class="Paging">
    <span class="PageNumberIndication">
        Page 
        @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
        of 
        @Model.PageCount
    </span>
    
    <span class="PagingLinks Previous">
    @if (Model.HasPreviousPage)
    {
        @Html.ActionLink("<<", "Index", new { page = 1 })
        @Html.Raw(" ");
        @Html.ActionLink("< Prev", "Index", new { page = Model.PageNumber - 1 })
    }
    else
    {
        @:<<
        @Html.Raw(" ");
        @:< Prev
    }
    </span>

    <span class="PagingSeperator">...</span>
     
    <span class="PagingLinks Next">
    @if (Model.HasNextPage)
    {
        @Html.ActionLink("Next >", "Index", new { page = Model.PageNumber + 1 })
        @Html.Raw(" ");
        @Html.ActionLink(">>", "Index", new { page = Model.PageCount })
    }
    else
    {
        @:Next >
        @Html.Raw(" ")
        @:>>
    }
    </span>
</div>