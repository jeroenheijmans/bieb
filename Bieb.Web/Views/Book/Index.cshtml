@model IEnumerable<Bieb.Domain.Entities.Book>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            ISBN
        </th>
        <th>
            Title
        </th>
        <th>
            SubTitle
        </th>
        <th>
            ISBNLanguage
        </th>
        <th>
            Language
        </th>
        <th>
            Year
        </th>
        <th>
            Publisher
        </th>
        <th>
            Version
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ISBN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
            <br />
            Edited By
            @foreach (var editor in item.Editors) { 
                @Html.DisplayTextFor(modelItem => editor.Id)
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ISBNLanguage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Language)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @if(item.Publisher != null) { @item.Publisher.Name }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Version)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
