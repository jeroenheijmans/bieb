@model Bieb.Domain.Entities.Book

@{
    ViewBag.Title = "Details";
}

<h1>@Html.DisplayFor(model => model.Title)</h1>
@if (Model.SubTitle != null)
{ 
    <h2>@Html.DisplayFor(model => model.SubTitle)</h2>
}

<p>
    @Html.DisplayFor(model => model.Year), @Html.DisplayFor(model => model.Language)
</p>

@if (Model.ISBN != null)
{ 
    <p>ISBN: @Html.DisplayFor(model => model.ISBN)</p>
}

@if (Model.Tags.Count() > 0)
{ 
    <p>Tags: @string.Join(", ", Model.Tags)</p>
}

@if (Model.Series != null)
{
    <p>From: @Html.DisplayFor(model => model.Series)</p>
}

@if (Model.Authors.Count() > 0)
{
    <h3>Authors</h3>
    <ul>
    @foreach (var person in Model.Authors)
    {
        <li>@Html.ActionLink(person.FullName, "Details", new { controller = "Person", id = person.Id })</li>
    }
    </ul>
}
    
@if (Model.Editors.Count > 0)
{
    <h3>Editors</h3>
    <ul>
    @foreach (var person in Model.Editors)
    {
        <li>@Html.ActionLink(person.FullName, "Details", new { controller = "Person", id = person.Id })</li>
    }
    </ul>
}
    
@if (Model.Stories.Count > 0)
{
    <h3>Stories</h3>
    Html.RenderPartial("~/Views/Story/ItemList.cshtml", Model.Stories.Values);
}
    
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
