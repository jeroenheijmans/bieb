@model Bieb.Domain.Entities.Publisher

@{
    ViewBag.Title = "Details";
}

<h1>@Model.Name</h1>

@if (Model.Books.Count() > 0)
{
    <section class="itemList authoredCollections">
        <h3>Books from this publisher</h3>
        @{ Html.RenderPartial("~/Views/Book/ItemList.cshtml", Model.Books); }
    </section> <!-- end .itemList .authoredCollections -->
}