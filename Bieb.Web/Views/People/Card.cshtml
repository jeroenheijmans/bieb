@model Bieb.Web.Models.People.ViewPersonModel

<div class="panel panel-primary">
    <div class="panel-body">
        <h1>
            @Html.DisplayFor(model => model.FullName)
        </h1>

        <p class="lead">
            @if (Model.IsGenderKnown)
            {
                <span title="@Model.GenderTooltip">@Model.Gender</span>
            }

            @if (Model.Nationality != null)
            {
                @Html.ImageFlagFor(Model.Nationality)
            }

            @string.Join(", ", Model.Roles)
        </p>

        <ul>
            @if (Model.IsDateOfBirthKnown)
            {
                <li>
                    @BiebResources.PeopleStrings.BornOn: @Model.DateOfBirth
                </li>
            }

            @if (Model.PlaceOfBirth != null)
            {
                <li>
                    @BiebResources.PeopleStrings.BornAt: @Html.DisplayFor(model => model.PlaceOfBirth)
                </li>
            }
            
            @if (Model.IsDateOfDeathKnown)
            {
                <li>
                    @BiebResources.PeopleStrings.DiedOn: @Model.DateOfDeath
                </li>
            }

            @if (Model.PlaceOfDeath != null)
            {
                <li>
                    @BiebResources.PeopleStrings.DiedAt: @Html.DisplayFor(model => model.PlaceOfDeath)
                </li>
            }

            @if (Model.Tags.Any())
            { 
                <li>
                    @BiebResources.SharedStrings.Tags:
                    @string.Join(", ", Model.Tags)
                </li>
            }
        </ul>

        <p>@BiebResources.PeopleStrings.RequestForAdditionalInfo</p>
    </div>
</div>
