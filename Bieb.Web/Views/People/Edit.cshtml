@model Bieb.Web.Models.EditPersonModel

@{
    ViewBag.Title = "Edit";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h1>@Model.FullName</h1>

@using (Html.BeginForm("Save", "People")) {
    <div class="edit-form">
        <section id="person-name">
            <div class="field">
                @Html.EditorFor(model => model.Title)
                @Html.LabelFor(model => model.Title)
            </div>

            <div class="field">
                @Html.EditorFor(model => model.FirstName)
                @Html.LabelFor(model => model.FirstName)
            </div>

            <div class="field">
                @Html.EditorFor(model => model.Prefix)
                @Html.LabelFor(model => model.Prefix)
            </div>

            <div class="field">
                @Html.EditorFor(model => model.Surname)
                @Html.LabelFor(model => model.Surname)
            </div>
        </section>
        
        <section id="person-details">
            <div class="field">
                @Html.DropDownListFor(model => model.Gender, new SelectList(Enum.GetValues(typeof(Bieb.Domain.Entities.Gender))))
                @Html.LabelFor(model => model.Gender)
            </div>
            
            <div class="field">
                @Html.EditorFor(model => model.Nationality)
                @Html.LabelFor(model => model.Nationality)
            </div>
        </section>
        
        <section id="person-life">
            <div class="field">
                @Html.EditorFor(model => model.PlaceOfBirth)
                @Html.LabelFor(model => model.PlaceOfBirth)
            </div>
            <div class="field">
                @Html.EditorFor(model => model.BirthDay)
                @Html.LabelFor(model => model.BirthDay)
            </div>
            <div class="field">
                @Html.EditorFor(model => model.BirthMonth)
                @Html.LabelFor(model => model.BirthMonth)
            </div>
            <div class="field">
                @Html.EditorFor(model => model.BirthYear)
                @Html.LabelFor(model => model.BirthYear)
            </div>
        </section>
        
        <section id="person-life">
            <div class="field">
                @Html.EditorFor(model => model.PlaceOfDeath)
                @Html.LabelFor(model => model.PlaceOfDeath)
            </div>
            <div class="field">
                @Html.EditorFor(model => model.DeathDay)
                @Html.LabelFor(model => model.DeathDay)
            </div>
            <div class="field">
                @Html.EditorFor(model => model.DeathMonth)
                @Html.LabelFor(model => model.DeathMonth)
            </div>
            <div class="field">
                @Html.EditorFor(model => model.DeathYear)
                @Html.LabelFor(model => model.DeathYear)
            </div>
        </section>
        
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.ModifiedDateTicks)
        
        @Html.ValidationSummary()

        <p>
            <input type="submit" value="@BiebResources.SharedStrings.Save" />
        </p>
    </div>
}