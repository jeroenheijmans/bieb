@model Bieb.Web.Models.EditPersonModel

@{
    ViewBag.Title = "Edit";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h1>@BiebResources.SharedStrings.Edit</h1>

@using (Html.BeginForm("Save", "People")) {
    <fieldset>
        <legend>Details</legend>

        <section id="person-name">
            <div class="field">
                @Html.EditorFor(model => model.Title)
                @Html.LabelFor(model => model.Title)
            </div>

            <div class="field">
                @Html.EditorFor(model => model.FirstName)
                @Html.LabelFor(model => model.FirstName)
            </div>

            <div class="field">
                @Html.EditorFor(model => model.Prefix)
                @Html.LabelFor(model => model.Prefix)
            </div>

            <div class="field">
                @Html.EditorFor(model => model.Surname)
                @Html.LabelFor(model => model.Surname)
            </div>
        </section>
        
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.ModifiedDateTicks)
        
        @Html.ValidationSummary()

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}