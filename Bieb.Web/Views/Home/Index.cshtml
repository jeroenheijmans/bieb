@{
    ViewBag.Title = "Home Page";
}

<section class="clearfix">
    <img class="img-bordered img-responsive pull-right hidden-xs" src="@Url.Content("~/Content/images/home-image.jpg")" alt="@BiebResources.HomeStrings.HomeImageAlt" />
    <h1>@BiebResources.HomeStrings.Title</h1>
    <p class="lead">@BiebResources.HomeStrings.Introduction</p>
    <p>@BiebResources.HomeStrings.Explanation</p>
    <p>@BiebResources.HomeStrings.Enjoy</p>
</section>

<hr />

<div class="row">
    <article class="col-md-4">
        <h4>@BiebResources.SharedStrings.People</h4>
        <p>@BiebResources.HomeStrings.BrowsePeople</p>
        <p>@Html.ActionLink(BiebResources.HomeStrings.BrowsePeopleLink, "Index", "People")</p>
    </article>

    <article class="col-md-4">
        <h4>@BiebResources.SharedStrings.Books</h4>
        <p>@BiebResources.HomeStrings.BrowseBooks</p>
        <p>@Html.ActionLink(BiebResources.HomeStrings.BrowseBooksLink, "Index", "Books")</p>
    </article>

    <article class="col-md-4">
        <h4>@BiebResources.HomeStrings.Explore</h4>
        <p>@BiebResources.HomeStrings.GetSurprised</p>
        <p>@Html.ActionLink(BiebResources.HomeStrings.SurpriseLink, "Index", "Surprise")</p>
    </article>
</div>

<hr />

<div class="row">
    <article class="col-md-4">
        <h4>@BiebResources.HomeStrings.TodaysBirthDates</h4>
        @Html.Action("TodaysBirthDates", "People")
    </article>

    <article class="col-md-4">
        <h4>@BiebResources.HomeStrings.RecentlyAdded</h4>
        @Html.Action("RecentlyAdded", "Books")
    </article>
</div>