@model Bieb.Domain.Entities.Person

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Person</legend>
    
    <div class="display-wrapper">
        <div class="display-label">Name</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.FullName)
        </div>
    </div>
    
    <div class="display-wrapper">
        <div class="display-label">Nationality</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Nationality)
        </div>
    </div>
        
    <div class="display-wrapper">
        <div class="display-label">PlaceOfDeath</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.PlaceOfDeath)
        </div>
    </div>
    
    <div class="display-wrapper">
        <div class="display-label">PlaceOfBirth</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.PlaceOfBirth)
        </div>
    </div>
    
    <div class="display-wrapper">
        <div class="display-label">DateOfBirth</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.DateOfBirth)
        </div>
    </div>
    
    <div class="display-wrapper">
        <div class="display-label">DateOfDeath</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.DateOfDeath)
        </div>
    </div>
    
    <div class="display-wrapper">
        <div class="display-label">Version</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Version)
        </div>
    </div>
    
    <div class="display-wrapper">
        <div class="display-label">Tags</div>
        <div class="display-field">
            @string.Join(", ", Model.Tags)
        </div>
    </div>

    <fieldset>
        <legend>Authored Stories</legend>
        <ul>
        @foreach (var story in Model.AuthoredStories)
        {
            <li>@Html.ActionLink(story.Title, "Details", new { controller = "Story", id = story.Id })</li>
        }
        </ul>
    </fieldset>

    <fieldset>
        <legend>Translated Stories</legend>
        <ul>
        @foreach (var story in Model.TranslatedStories)
        {
            <li>@Html.ActionLink(story.Title, "Details", new { controller = "Story", id = story.Id })</li>
        }
        </ul>
    </fieldset>

    <fieldset>
        <legend>Edited Books</legend>
        <ul>
        @foreach (var book in Model.EditedBooks)
        {
            <li>@Html.ActionLink(book.Title, "Details", new { controller = "Book", id = book.Id })</li>
        }
        </ul>
    </fieldset>

</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
