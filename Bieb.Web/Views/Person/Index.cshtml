@model IEnumerable<Bieb.Domain.Entities.Person>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Roles
        </th>
        <th>
            @*Gender*@
        </th>
        <th>
            Name
        </th>
        <th>
            Nationality
        </th>
        <th>
            PlaceOfDeath
        </th>
        <th>
            PlaceOfBirth
        </th>
        <th>
            DateOfBirth
        </th>
        <th>
            DateOfDeath
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @string.Join(", ", item.Roles)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GenderChar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nationality)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlaceOfDeath)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlaceOfBirth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfBirth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfDeath)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
