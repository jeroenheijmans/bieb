<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Bieb.Domain"
                   namespace="Bieb.Domain.Entities">

  <class name="Book">
    
    <id name="Id" column="BookId">
      <generator class="native" />
    </id>
    
    <property name="Title" not-null="true" index="IX_Book_Title" />
    <property name="SubTitle" />
    <property name="ISBN" />
    <property name="ISBNLanguage" />
    <property name="Year" />
    
    <many-to-one name="Publisher" column="PublisherId" foreign-key="FK_Book_Publisher" />

    <map name="Stories" table="BookStory" lazy="true">
      <key column="BookId" foreign-key="FK_BookStory_Book" />
      <index column="Position" type="Int32" />
      <many-to-many column="StoryId" class="Story" foreign-key="FK_BookStory_Story" />
    </map>
    
    <bag name="Editors" table="BookEditor" lazy="true">
      <key column="BookId" foreign-key="FK_BookEditor_Book" />
      <many-to-many column="PersonId" class="Person" foreign-key="FK_BookEditor_Person" />
    </bag>
    
  </class>

</hibernate-mapping>