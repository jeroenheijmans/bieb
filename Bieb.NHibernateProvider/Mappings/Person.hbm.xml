<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Bieb.Domain"
                   namespace="Bieb.Domain.Entities">

  <class name="Person">
    
    <id name="Id" column="PersonId">
      <generator class="native" />
    </id>

    <property name="Title" />
    <property name="FirstName" />
    <property name="Prefix" />
    <property name="Surname" />
    
    <property name="Gender" /><!-- TODO: This ends up as an int in the generated database, but should be a char. -->
    <property name="Nationality" />
    <property name="PlaceOfBirth" />
    <property name="PlaceOfDeath" />
    <property name="DateOfBirth" />
    <property name="DateOfDeath" />

    <bag name="EditedBooks" table="BookEditor" lazy="true">
      <key column="PersonId" foreign-key="FK_BookEditor_Person" />
      <many-to-many column="BookId" class="Book" foreign-key="FK_BookEditor_Book" />
    </bag>

    <bag name="AuthoredStories" table="StoryAuthor" lazy="true">
      <key column="PersonId" foreign-key="FK_StoryAuthor_Person" />
      <many-to-many column="StoryId" class="Story" foreign-key="FK_StoryAuthor_Story" />
    </bag>

    <bag name="TranslatedStories" table="StoryTranslator" lazy="true">
      <key column="PersonId" foreign-key="FK_StoryTranslator_Person" />
      <many-to-many column="StoryId" class="Story" foreign-key="FK_StoryTranslator_Story" />
    </bag>
    
  </class>

</hibernate-mapping>